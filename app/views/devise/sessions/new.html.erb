<main class="container container-session mt-5">
  <% if flash.alert.present? %>
    <div class="rounded-3 mb-2 py-2 px-3 border border-danger text-danger">
      <%= flash.alert %>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'メールアドレス' %>

    <div class="mt-2">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'パスワード' %>
    </div>

    <div class="mt-2">
      <%= f.submit 'ログイン', class: 'btn btn-outline-primary' %>
    </div>
  <% end %>

  <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post,
                                                          class: 'btn btn-primary',
                                                          data: { turbo: false } do %>
    Google でログイン
  <% end %>
</main>

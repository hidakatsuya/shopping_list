<%= turbo_frame_tag item do %>
  <div class="d-flex align-items-center gap-2 rounded rounded-3 border border-gray shadow-sm p-2 mb-2 bg-white">
    <% if item.completed? %>
      <%= button_to incomplete_item_path(item), method: :post, value: '未完了', class: 'btn btn-none' do %>
        <i class="bi bi-check-square"></i>
      <% end %>
    <% else %>
      <%= button_to complete_item_path(item), method: :post, value: '完了', class: 'btn btn-none' do %>
        <i class="bi bi-square"></i>
      <% end %>
    <% end %>

    <div class="<%= class_names('flex-grow-1 text-dark', { 'text-decoration-line-through' => item.completed? }) %>">
      <%= item.name %>
    </div>

    <%= button_to edit_item_path(item), method: :get, value: '編集', class: 'btn btn-light' do %>
      <i class="bi bi-pencil-square"></i>
    <% end %>
    <%= button_to item_path(item), method: :delete, value: '削除', class: 'btn btn-light' do %>
      <i class="bi bi-trash"></i>
    <% end %>
  </div>
<% end %>

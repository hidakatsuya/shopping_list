<%= turbo_frame_tag item do %>
  <div class="<%= class_names('item', { 'item--completed' => item.completed? }) %>">
    <div class="item__completion">
      <% if item.completed? %>
        <%= button_to '[o]', incomplete_item_path(item), method: :post %>
      <% else %>
        <%= button_to '[ ]', complete_item_path(item), method: :post %>
      <% end %>
    </div>

    <%= link_to item.name, edit_item_path(item), class: 'item__name' %>

    <div class="item__actions">
      <%= button_to '削除',
                    item_path(item),
                    method: :delete,
                    class: "btn btn--light" %>
    </div>
  </div>
<% end %>

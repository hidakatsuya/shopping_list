<div class="text-center mb-3">
  <%= link_to new_item_path,
              data: { turbo_frame: dom_id(Item.new) },
              class: "btn btn-outline-primary" do %>
    <i class="bi bi-plus-lg"></i>
    アイテムを追加
  <% end %>
</div>

<%= turbo_frame_tag Item.new do %>
  <% if @items.none? %>
    <%= render 'items/empty_state' %>
  <% end %>
<% end %>

<%= turbo_frame_tag 'items' do %>
  <%= render @items %>
<% end %>
